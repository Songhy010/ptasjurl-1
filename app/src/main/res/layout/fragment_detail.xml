<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/iv_height_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/iv_height_5"
                    android:text="@string/type"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/iv_height_5"
                    android:text="(in floor 1)"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/iv_height_5"
                    android:text="@string/price"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$55.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/iv_height_5"
                    android:text="(3 member)"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:paddingLeft="@dimen/iv_height_15"
        android:paddingTop="@dimen/iv_height_3"
        android:paddingBottom="@dimen/iv_height_3"
        android:text="@string/other_price"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/iv_height_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/iv_height_25"
                android:layout_height="@dimen/iv_height_25"
                android:padding="@dimen/iv_height_5"
                android:src="@drawable/img_plug" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/iv_height_30"
                android:text="@string/electric"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_electric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_height_10"
                android:layout_weight="1"
                android:paddingLeft="@dimen/iv_height_30"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/iv_height_25"
                android:layout_height="@dimen/iv_height_25"
                android:padding="@dimen/iv_height_5"
                android:src="@drawable/img_water" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/iv_height_30"
                android:text="@string/water"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_height_10"
                android:layout_weight="1"
                android:paddingLeft="@dimen/iv_height_30"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/iv_height_25"
                android:layout_height="@dimen/iv_height_25"
                android:padding="@dimen/iv_height_5"
                android:src="@drawable/img_parking" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/iv_height_30"
                android:text="@string/parking"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_park"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_height_10"
                android:layout_weight="1"
                android:paddingLeft="@dimen/iv_height_30"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/iv_height_25"
                android:layout_height="@dimen/iv_height_25"
                android:padding="@dimen/iv_height_5"
                android:src="@drawable/img_other" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/iv_height_30"
                android:text="@string/other"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_height_10"
                android:layout_weight="1"
                android:paddingLeft="@dimen/iv_height_30"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:paddingLeft="@dimen/iv_height_15"
        android:paddingTop="@dimen/iv_height_3"
        android:paddingBottom="@dimen/iv_height_3"
        android:text="@string/specification"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/iv_height_15">
        <TextView
            android:id="@+id/tv_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/available"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_small"
            android:textStyle="normal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/viewer"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_viewer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_height_10"
                android:layout_weight="1"
                android:paddingLeft="@dimen/iv_height_45"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/close"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_height_10"
                android:layout_weight="1"
                android:paddingLeft="@dimen/iv_height_45"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/size"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_height_10"
                android:layout_weight="1"
                android:paddingLeft="@dimen/iv_height_45"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_10"
            android:text="@string/desc"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_small"
            android:textStyle="normal" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:paddingLeft="@dimen/iv_height_15"
        android:paddingTop="@dimen/iv_height_3"
        android:paddingBottom="@dimen/iv_height_3"
        android:text="@string/specification"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_height_110"
        android:orientation="vertical"
        android:padding="@dimen/iv_height_15">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:enabled="false"
                android:id="@+id/check_aircon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/aircon" />

            <CheckBox
                android:enabled="false"
                android:id="@+id/check_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/table" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_10"
            android:orientation="horizontal">

            <CheckBox
                android:enabled="false"
                android:id="@+id/check_secu_cam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/secu_cam" />

            <CheckBox
                android:enabled="false"
                android:id="@+id/check_secu_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/secu_man" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>