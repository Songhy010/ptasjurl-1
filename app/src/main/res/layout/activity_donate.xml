<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActivityDonate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:padding="@dimen/iv_height_13"
            android:src="@drawable/img_arrow"
            android:tint="@color/black"
            android:layout_width="@dimen/iv_height_45"
            android:layout_height="@dimen/iv_height_45"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="@dimen/iv_height_45"
            android:src="@drawable/img_donate" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_desc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/iv_height_75">
                <ImageView
                    android:padding="@dimen/iv_height_5"
                    android:src="@drawable/img_aba"
                    android:id="@+id/iv_aba"
                    android:layout_width="@dimen/iv_height_75"
                    android:layout_height="@dimen/iv_height_75"/>

                <ImageView
                    android:layout_marginLeft="@dimen/iv_height_50"
                    android:layout_toRightOf="@+id/iv_aba"
                    android:padding="@dimen/iv_height_5"
                    android:src="@drawable/img_wing"
                    android:id="@+id/iv_wing"
                    android:layout_width="@dimen/iv_height_75"
                    android:layout_height="@dimen/iv_height_75"/>
                <TextView
                    android:layout_marginLeft="@dimen/iv_height_5"
                    android:layout_marginTop="@dimen/iv_height_10"
                    android:layout_below="@+id/iv_aba"
                    android:id="@+id/tv_aba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="normal" />
                <TextView
                    android:layout_marginLeft="@dimen/iv_height_5"
                    android:id="@+id/tv_wing"
                    android:layout_marginTop="@dimen/iv_height_10"
                    android:layout_below="@+id/iv_wing"
                   android:layout_alignLeft="@+id/iv_wing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="normal" />

            </RelativeLayout>

            <TextView
                android:padding="@dimen/iv_height_10"
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/iv_height_45"
                android:text="@string/desc"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/top_menu_activity" />
</LinearLayout>