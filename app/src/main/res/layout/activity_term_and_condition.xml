<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ActivityTermAndCondition">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_back"
                android:padding="@dimen/iv_height_13"
                android:tint="@color/black"
                android:src="@drawable/img_arrow"
                android:layout_width="@dimen/iv_height_45"
                android:layout_height="@dimen/iv_height_45"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:text="@string/term_condition"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_desc"
                android:padding="@dimen/iv_height_5"
                android:layout_marginTop="@dimen/iv_height_25"
                android:textStyle="normal"
                android:text="@string/app_name"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>